<%- include ('includes/head.ejs') %>

   <div class="quiz-questions">
     <img src="images/logo1.png" alt="logo van Match">
     <p><%= question.question  %></p>
     <form action="/profiles" method="POST">
        <input type="radio" id="a" name="answer" value="a">
        <label for="a"><%= question.answer1  %></label><br>
        <input type="radio" id="b" name="answer" value="b">
        <label for="b"><%= question.answer2  %></label><br>
        <input type="radio" id="c" name="answer" value="c">
        <label for="c"><%= question.answer3  %></label><br>
        <input type="radio" id="d" name="answer" value="d">
        <label for="d"><%= question.answer4  %></label>

        <button class="nextButton">Verder</button>
     </form>

     <div class="container hidden">
        <div class="step_progress_bar">
            <div class="step">
                <div class="bullet">1</div>
            </div>
            <div class="step">
                <div class="bullet">2</div>
            </div>
            <div class="step">
                <div class="bullet">3</div>
            </div>
            <div class="step">
                <div class="bullet">4</div>
            </div>
            <div class="step">
                <div class="bullet">5</div>
            </div>
            <div class="step">
                <div class="bullet">6</div>
            </div>
            <div class="step">
                <div class="bullet">7</div>
            </div>
            <div class="step">
                <div class="bullet">8</div>
            </div>
            <div class="step">
                <div class="bullet">9</div>
            </div>
            <div class="step">
                <div class="bullet">10</div>
            </div>
        </div>
     </div>

   </div>

   <script src="/scripts/steps.js"></script>

